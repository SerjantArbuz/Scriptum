<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sgtmelon.scriptum">

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/App.Light.UI">

        <activity
            android:name="sgtmelon.scriptum.app.screen.splash.SplashActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/App.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="sgtmelon.scriptum.app.screen.intro.IntroActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName="sgtmelon.scriptum.app.screen.splash.SplashActivity"
            android:theme="@style/App.Intro">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="sgtmelon.scriptum.app.screen.main.MainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </activity>

        <activity
            android:name="sgtmelon.scriptum.app.view.NoteActivity"
            android:parentActivityName="sgtmelon.scriptum.app.screen.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.EDIT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="sgtmelon.scriptum.app.screen.preference.PreferenceActivity"
            android:configChanges="keyboardHidden"
            android:parentActivityName="sgtmelon.scriptum.app.screen.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="sgtmelon.scriptum.app.screen.develop.DevelopActivity"
            android:configChanges="keyboardHidden"
            android:parentActivityName="sgtmelon.scriptum.app.screen.preference.PreferenceActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>