<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="itemRoll"
            type="sgtmelon.handynotes.app.model.item.ItemRoll" />

    </data>

    <androidx.cardview.widget.CardView
        style="@style/ItemCardView"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="@dimen/card_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:visibility="invisible" />

                <ImageButton
                    android:id="@+id/itemRoll_ib_drag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="@null"
                    android:tint="@color/colorDark"
                    app:srcCompat="@drawable/ic_move" />

            </FrameLayout>

            <EditText
                android:id="@+id/itemRoll_et_enter"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@null"
                android:imeOptions="flagNoFullscreen"
                android:inputType="textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine"
                android:padding="@dimen/item_layout_medium_indent"
                android:text='@{itemRoll.text}'
                android:textSize="@dimen/text_big_size" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>