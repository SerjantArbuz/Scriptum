<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="sgtmelon.scriptum.R"/>

        <variable name="rollItem" type="sgtmelon.scriptum.app.model.item.RollItem"/>

    </data>

    <androidx.cardview.widget.CardView
            android:id="@+id/roll_write_parent_card"
            style="@style/Card"
            app:cardBackgroundColor="?attr/clBackgroundView"
            app:cardCornerRadius="@dimen/radius_4dp"
            app:cardUseCompatPadding="false">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <CheckBox style="@style/Button.RollItem.Write"/>

                <ImageButton
                        android:id="@+id/roll_write_drag_button"
                        style="@style/Container.RollItem.Click"
                        android:contentDescription="@null"
                        app:boolExpression='@{rollItem.check}'
                        app:trueColor='@{R.attr.clAccent}'
                        app:falseColor='@{R.attr.clContent}'
                        app:srcCompat="@drawable/ic_move"
                        tools:tint="?attr/clAccent"/>

            </FrameLayout>

            <EditText
                    android:id="@+id/roll_write_enter"
                    style="@style/EditText.RollItem.Write"
                    android:hint="@null"
                    android:importantForAutofill="noExcludeDescendants"
                    android:text='@{rollItem.text}'
                    tools:targetApi="o"
                    tools:text="@string/preview_note_roll"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>