<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="sgtmelon.scriptum.office.Help.Clr"/>

        <import type="sgtmelon.scriptum.office.Help.Pref"/>

        <import
                alias="def"
                type="sgtmelon.scriptum.office.annot.def.DefTheme"/>

        <import
                alias="text"
                type="android.text.TextUtils"/>

        <import
                alias="v"
                type="android.view.View"/>

        <variable
                name="itemNote"
                type="sgtmelon.scriptum.app.model.item.ItemNote"/>

        <variable
                name="listRoll"
                type="java.util.List&lt;sgtmelon.scriptum.app.model.item.ItemRoll&gt;"/>

    </data>

    <androidx.cardview.widget.CardView
            style="@style/Card"
            app:cardBackgroundColor='@{Clr.getNote(context, itemNote.color, false)}'
            app:cardCornerRadius="@dimen/radius_2dp"
            app:cardUseCompatPadding="false"
            tools:cardBackgroundColor="?attr/clPrimary">

        <FrameLayout
                android:id="@+id/itemNote_fl_click"
                style="@style/ItemNote.Click">

            <LinearLayout style="@style/ItemNote.Container">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <TextView
                            style="@style/ItemNote.Name"
                            android:text='@{itemNote.name}'
                            android:visibility='@{text.isEmpty(itemNote.name) ? v.GONE : v.VISIBLE}'
                            tools:text="@string/test_note_name"/>

                    <include
                            layout="@layout/inc_item_note_roll"
                            android:visibility='@{listRoll.size() &gt;= 1 ? v.VISIBLE : v.GONE}'
                            app:itemRoll='@{listRoll.size() &gt;= 1 ? listRoll.get(0) : null}'/>

                    <include
                            layout="@layout/inc_item_note_roll"
                            android:visibility='@{listRoll.size() &gt;= 2 ? v.VISIBLE : v.GONE}'
                            app:itemRoll='@{listRoll.size() &gt;= 2 ? listRoll.get(1) : null}'/>

                    <include
                            layout="@layout/inc_item_note_roll"
                            android:visibility='@{listRoll.size() &gt;= 3 ? v.VISIBLE : v.GONE}'
                            app:itemRoll='@{listRoll.size() &gt;= 3 ? listRoll.get(2) : null}'/>

                    <include
                            layout="@layout/inc_item_note_roll"
                            android:visibility='@{listRoll.size() &gt;= 4 ? v.VISIBLE : v.GONE}'
                            app:itemRoll='@{listRoll.size() &gt;= 4 ? listRoll.get(3) : null}'/>

                    <include
                            layout="@layout/inc_item_note_info"
                            app:itemNote='@{itemNote}'/>

                </LinearLayout>

                <!-- TODO закруглить края -->

                <View
                        style="@style/ItemNote.Color.Vertical"
                        android:background='@{Clr.getNote(context, itemNote.color, true)}'
                        android:visibility='@{Pref.getTheme(context) == def.dark ? v.VISIBLE : v.GONE}'
                        tools:background="@color/noteGreenDark"
                        tools:visibility="visible"/>

            </LinearLayout>

            <FrameLayout
                    android:id="@+id/itemNote_fl_check"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/clSelect"
                    tools:visibility="visible">

                <ImageView
                        style="@style/ItemNote.Check"
                        android:background='@{Pref.getTheme(context) == def.light ? @drawable/ic_note_check_l :  @drawable/ic_note_check_d}'
                        android:contentDescription="@null"
                        app:srcCompat="@drawable/ic_check"
                        tools:background="@drawable/ic_note_check_d"/>

            </FrameLayout>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</layout>
