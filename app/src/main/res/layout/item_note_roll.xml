<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="sgtmelon.handynotes.office.Help.Icon" />

        <import type="sgtmelon.handynotes.office.Help.Time" />

        <import
            alias="text"
            type="android.text.TextUtils" />

        <import
            alias="v"
            type="android.view.View" />

        <variable
            name="itemNote"
            type="sgtmelon.handynotes.app.model.item.ItemNote" />

        <variable
            name="listRoll"
            type="java.util.List&lt;sgtmelon.handynotes.app.model.item.ItemRoll&gt;" />

    </data>

    <androidx.cardview.widget.CardView
        style="@style/ItemCardView"
        app:cardBackgroundColor='@{Icon.getColor(context, false, itemNote.color)}'
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="@dimen/card_corner_radius">

        <LinearLayout
            android:id="@+id/itemNote_ll_click"
            style="@style/Note.Click">

            <TextView
                android:id="@+id/itemNote_tv_name"
                style="@style/Note.Name"
                android:text='@{itemNote.name}'
                android:visibility='@{text.isEmpty(itemNote.name) ? v.GONE : v.VISIBLE}' />

            <LinearLayout
                android:id="@+id/itemNote_ll_roll_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility='@{listRoll.size() &gt;= 1 ? v.VISIBLE : v.GONE}'>

                <ImageView
                    android:id="@+id/itemNote_iv_check_1"
                    style="@style/Note.Indicator"
                    android:src='@{listRoll.size() &gt;= 1 &amp;&amp; listRoll.get(0).check ? @drawable/ic_check_done : @drawable/ic_check_outline}' />

                <TextView
                    android:id="@+id/itemNote_tv_text_1"
                    style="@style/Note.Roll"
                    android:text='@{listRoll.size() &gt;= 1 ? listRoll.get(0).text : @string/test_item_note_roll_1}' />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemNote_ll_roll_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility='@{listRoll.size() &gt;= 2 ? v.VISIBLE : v.GONE}'>


                <ImageView
                    android:id="@+id/itemNote_iv_check_2"
                    style="@style/Note.Indicator"
                    android:src='@{listRoll.size() &gt;= 2 &amp;&amp; listRoll.get(1).check ? @drawable/ic_check_done : @drawable/ic_check_outline}' />

                <TextView
                    android:id="@+id/itemNote_tv_text_2"
                    style="@style/Note.Roll"
                    android:text='@{listRoll.size() &gt;= 2 ? listRoll.get(1).text : @string/test_item_note_roll_2}' />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemNote_ll_roll_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility='@{listRoll.size() &gt;= 3 ? v.VISIBLE : v.GONE}'>


                <ImageView
                    android:id="@+id/itemNote_iv_check_3"
                    style="@style/Note.Indicator"
                    android:src='@{listRoll.size() &gt;= 3 &amp;&amp; listRoll.get(2).check ? @drawable/ic_check_done : @drawable/ic_check_outline}' />

                <TextView
                    android:id="@+id/itemNote_tv_text_3"
                    style="@style/Note.Roll"
                    android:text='@{listRoll.size() &gt;= 3 ? listRoll.get(2).text : @string/test_item_note_roll_3}' />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemNote_ll_roll_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility='@{listRoll.size() &gt;= 4 ? v.VISIBLE : v.GONE}'>

                <ImageView
                    android:id="@+id/itemNote_iv_check_4"
                    style="@style/Note.Indicator"
                    android:src='@{listRoll.size() &gt;= 4 &amp;&amp; listRoll.get(3).check ? @drawable/ic_check_done : @drawable/ic_check_outline}' />

                <TextView
                    android:id="@+id/itemNote_tv_text_4"
                    style="@style/Note.Roll"
                    android:text='@{listRoll.size() &gt;= 4 ? listRoll.get(3).text : @string/test_item_note_roll_4}' />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/item_layout_medium_indent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/itemNote_iv_rank"
                    style="@style/Note.Indicator"
                    android:layout_marginEnd="@dimen/item_layout_small_indent"
                    android:layout_marginRight="@dimen/item_layout_small_indent"
                    android:visibility='@{itemNote.rankId.length == 0 ? v.GONE : v.VISIBLE}'
                    app:srcCompat="@drawable/ic_rank" />

                <ImageView
                    android:id="@+id/itemNote_iv_bind"
                    style="@style/Note.Indicator"
                    android:layout_marginEnd="@dimen/item_layout_small_indent"
                    android:layout_marginRight="@dimen/item_layout_small_indent"
                    android:visibility='@{itemNote.status ? v.VISIBLE : v.GONE}'
                    app:srcCompat="@drawable/ic_bind_roll" />

                <TextView
                    android:id="@+id/itemNote_tv_text"
                    style="@style/Note.Info"
                    android:layout_width="wrap_content"
                    android:text='@{itemNote.text}' />

                <TextView
                    android:id="@+id/itemNote_tv_change"
                    style="@style/Note.Info"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text='@{Time.formatNoteDate(context, itemNote.change)}' />

                <TextView
                    android:id="@+id/itemNote_tv_create"
                    style="@style/Note.Info"
                    android:layout_width="wrap_content"
                    android:text='@{Time.formatNoteDate(context, itemNote.create)}' />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
