<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="sgtmelon.handynotes.Help.Time" />

        <import type="android.text.TextUtils" />

        <import type="android.view.View" />

        <variable
            name="itemNote"
            type="sgtmelon.handynotes.model.item.ItemNote" />

        <variable
            name="listRoll"
            type="java.util.List&lt;sgtmelon.handynotes.model.item.ItemRoll&gt;" />

    </data>

    <FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/itemNote_fl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_layout_main_indent"
        android:background="@color/noteWhiteDark">

        <FrameLayout
            android:id="@+id/itemNote_fl_submain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_layout_sub_indent"
            android:background="@color/noteWhite">

            <LinearLayout
                android:id="@+id/itemNote_ll_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="@dimen/item_layout_medium_indent">

                <TextView
                    android:id="@+id/itemNote_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/item_layout_medium_indent"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text='@{itemNote.name}'
                    android:textColor="@color/colorDark"
                    android:textSize="@dimen/text_big_size"
                    android:visibility='@{TextUtils.isEmpty(itemNote.name) ? View.GONE : View.VISIBLE}' />

                <LinearLayout
                    android:id="@+id/itemNote_ll_roll_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility='@{listRoll.size &gt;= 1 ? View.VISIBLE : View.GONE}'>

                    <ImageView
                        android:id="@+id/itemNote_iv_check_1"
                        android:layout_width="@dimen/icon_small_size"
                        android:layout_height="@dimen/icon_small_size"
                        android:layout_gravity="center"
                        android:src='@{listRoll.size &gt;= 1 ? (listRoll.get(0).check ? @drawable/ic_info_check_done : @drawable/ic_info_check_outline) : @drawable/ic_info_check_outline}'
                        android:tint="@color/colorDark" />

                    <TextView
                        android:id="@+id/itemNote_tv_text_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/item_layout_small_indent"
                        android:layout_marginStart="@dimen/item_layout_small_indent"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text='@{listRoll.size &gt;= 1 ? listRoll.get(0).text : @string/test_item_note_roll_1}'
                        android:textColor="@color/colorDark"
                        android:textSize="@dimen/text_medium_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/itemNote_ll_roll_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility='@{listRoll.size &gt;= 2 ? View.VISIBLE : View.GONE}'>


                    <ImageView
                        android:id="@+id/itemNote_iv_check_2"
                        android:layout_width="@dimen/icon_small_size"
                        android:layout_height="@dimen/icon_small_size"
                        android:layout_gravity="center"
                        android:src='@{listRoll.size &gt;= 2 ? (listRoll.get(1).check ? @drawable/ic_info_check_done : @drawable/ic_info_check_outline) : @drawable/ic_info_check_outline}'
                        android:tint="@color/colorDark" />

                    <TextView
                        android:id="@+id/itemNote_tv_text_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/item_layout_small_indent"
                        android:layout_marginStart="@dimen/item_layout_small_indent"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text='@{listRoll.size &gt;= 2 ? listRoll.get(1).text : @string/test_item_note_roll_2}'
                        android:textColor="@color/colorDark"
                        android:textSize="@dimen/text_medium_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/itemNote_ll_roll_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility='@{listRoll.size &gt;= 3 ? View.VISIBLE : View.GONE}'>


                    <ImageView
                        android:id="@+id/itemNote_iv_check_3"
                        android:layout_width="@dimen/icon_small_size"
                        android:layout_height="@dimen/icon_small_size"
                        android:layout_gravity="center"
                        android:src='@{listRoll.size &gt;= 3 ? (listRoll.get(2).check ? @drawable/ic_info_check_done : @drawable/ic_info_check_outline) : @drawable/ic_info_check_outline}'
                        android:tint="@color/colorDark" />

                    <TextView
                        android:id="@+id/itemNote_tv_text_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/item_layout_small_indent"
                        android:layout_marginStart="@dimen/item_layout_small_indent"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text='@{listRoll.size &gt;= 3 ? listRoll.get(2).text : @string/test_item_note_roll_3}'
                        android:textColor="@color/colorDark"
                        android:textSize="@dimen/text_medium_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/itemNote_ll_roll_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility='@{listRoll.size &gt;= 4 ? View.VISIBLE : View.GONE}'>

                    <ImageView
                        android:id="@+id/itemNote_iv_check_4"
                        android:layout_width="@dimen/icon_small_size"
                        android:layout_height="@dimen/icon_small_size"
                        android:layout_gravity="center"
                        android:src='@{listRoll.size &gt;= 4 ? (listRoll.get(3).check ? @drawable/ic_info_check_done : @drawable/ic_info_check_outline) : @drawable/ic_info_check_outline}'
                        android:tint="@color/colorDark" />

                    <TextView
                        android:id="@+id/itemNote_tv_text_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/item_layout_small_indent"
                        android:layout_marginStart="@dimen/item_layout_small_indent"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text='@{listRoll.size &gt;= 4 ? listRoll.get(3).text : @string/test_item_note_roll_4}'
                        android:textColor="@color/colorDark"
                        android:textSize="@dimen/text_medium_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/item_layout_medium_indent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/itemNote_iv_rank"
                        android:layout_width="@dimen/icon_small_size"
                        android:layout_height="@dimen/icon_small_size"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/item_layout_small_indent"
                        android:layout_marginRight="@dimen/item_layout_small_indent"
                        android:tint="@color/colorDark"
                        android:visibility='@{itemNote.rankId.length == 0 ? View.GONE : View.VISIBLE}'
                        app:srcCompat="@drawable/ic_menu_rank" />

                    <ImageView
                        android:id="@+id/itemNote_iv_bind"
                        android:layout_width="@dimen/icon_small_size"
                        android:layout_height="@dimen/icon_small_size"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/item_layout_small_indent"
                        android:layout_marginRight="@dimen/item_layout_small_indent"
                        android:tint="@color/colorDark"
                        android:visibility='@{itemNote.status ? View.VISIBLE : View.GONE}'
                        app:srcCompat="@drawable/ic_menu_bind_roll" />

                    <TextView
                        android:id="@+id/itemNote_tv_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/item_layout_small_indent"
                        android:layout_marginRight="@dimen/item_layout_small_indent"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text='@{itemNote.text}'
                        android:textColor="@color/colorDark"
                        android:textSize="@dimen/text_small_size" />

                    <TextView
                        android:id="@+id/itemNote_tv_change"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/item_layout_small_indent"
                        android:layout_marginRight="@dimen/item_layout_small_indent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text='@{Time.formatNoteDate(context, itemNote.change)}'
                        android:textColor="@color/colorDark"
                        android:textSize="@dimen/text_small_size" />

                    <TextView
                        android:id="@+id/itemNote_tv_create"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/item_layout_small_indent"
                        android:layout_marginRight="@dimen/item_layout_small_indent"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text='@{Time.formatNoteDate(context, itemNote.create)}'
                        android:textColor="@color/colorDark"
                        android:textSize="@dimen/text_small_size" />

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
</layout>