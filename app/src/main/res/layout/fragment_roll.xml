<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable name="noteItem"
                  type="sgtmelon.scriptum.app.model.item.NoteItem"/>

        <variable name="keyEdit"
                  type="boolean"/>

    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

            <include
                    layout="@layout/include_toolbar_note"
                    app:noteItem='@{noteItem}'
                    app:keyEdit='@{keyEdit}'/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/roll_recycler"
                    style="@style/RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </LinearLayout>

        <include layout="@layout/include_roll_enter"/>

    </LinearLayout>

</layout>