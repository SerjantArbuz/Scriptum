<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:elevation="@dimen/elevation_0dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/incToolbar_tb"
        style="?attr/styleToolbar"
        android:paddingRight="@dimen/layout_8dp"
        android:paddingLeft="@dimen/layout_8dp"
        app:popupTheme="?attr/themePopup">

        <!-- FIXME проверь правильность отображения с padding'ом -->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/clBackgroundEnter"
            app:cardCornerRadius="@dimen/radius_2dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/incToolbarRank_ib_cancel"
                    style="@style/Enter.Button"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/ic_cancel_on" />

                <EditText
                    android:id="@+id/incToolbarRank_et_enter"
                    style="@style/Enter.Text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/hint_enter_rank_new"
                    android:imeOptions="flagNoFullscreen|actionDone"
                    android:inputType="textCapSentences|textAutoCorrect|textAutoComplete"
                    android:maxLength="@integer/length_max_rank_name"
                    android:maxLines="1" />

                <ImageButton
                    android:id="@+id/incToolbarRank_ib_add"
                    style="@style/Enter.Button"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/ic_rank" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.Toolbar>

    <View style="@style/Divider.Horizontal" />

</com.google.android.material.appbar.AppBarLayout>
