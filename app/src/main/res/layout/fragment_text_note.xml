<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import alias="v" type="android.view.View"/>

        <variable name="menuCallback" type="sgtmelon.scriptum.app.screen.callback.note.text.TextNoteMenuCallback"/>
        <variable name="rankEmpty" type="boolean"/>

        <variable name="noteItem" type="sgtmelon.scriptum.app.model.item.NoteItem"/>
        <variable name="keyEdit" type="boolean"/>

        <variable name="undoAccess" type="boolean"/>
        <variable name="redoAccess" type="boolean"/>

        <variable name="saveEnabled" type="boolean"/>

    </data>

    <LinearLayout
            android:id="@+id/text_note_parent_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <include
                layout="@layout/include_toolbar_note"
                app:keyEdit='@{keyEdit}'
                app:noteItem='@{noteItem}'/>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="@dimen/recycler_margin"
                android:paddingBottom="@dimen/recycler_margin">

            <androidx.cardview.widget.CardView
                    android:id="@+id/text_note_content_card"
                    style="@style/Card"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="?attr/clBackgroundView"
                    app:cardCornerRadius="@dimen/radius_4dp"
                    app:cardUseCompatPadding="false">

                <ScrollView
                        android:id="@+id/text_note_content_scroll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">

                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <EditText
                                android:id="@+id/text_note_content_enter"
                                style="@style/EditText.TextNote.Enter"
                                android:hint="@string/hint_enter_text"
                                android:importantForAutofill="noExcludeDescendants"
                                android:text='@={noteItem.text}'
                                android:visibility='@{keyEdit ? v.VISIBLE : v.INVISIBLE}'
                                tools:targetApi="o"
                                tools:visibility="gone"/>

                        <TextView
                                android:id="@+id/text_note_content_text"
                                style="@style/EditText.TextNote.Read"
                                android:text='@{noteItem.text}'
                                android:visibility='@{!keyEdit ? v.VISIBLE : v.INVISIBLE}'
                                tools:text="@string/preview_note_text"/>

                    </FrameLayout>

                </ScrollView>

            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <include layout="@layout/include_text_note_panel"
                 app:keyEdit='@{keyEdit}'
                 app:menuCallback='@{menuCallback}'
                 app:noteItem='@{noteItem}'
                 app:rankEmpty='@{rankEmpty}'
                 app:redoAccess='@{redoAccess}'
                 app:saveEnabled='@{saveEnabled}'
                 app:undoAccess='@{undoAccess}'/>

    </LinearLayout>

</layout>