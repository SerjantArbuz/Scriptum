<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>

        <variable name="theme" type="int"/>
        <variable name="menuCallback" type="sgtmelon.scriptum.screen.ui.callback.note.INoteMenu"/>
        <variable name="dataLoad" type="boolean"/>

        <variable name="item" type="sgtmelon.scriptum.model.item.NoteItem"/>
        <variable name="rankEmpty" type="boolean"/>
        <variable name="editMode" type="boolean"/>

        <variable name="inputAccess" type="sgtmelon.scriptum.control.input.InputControl.Access"/>
    </data>

    <LinearLayout
            android:id="@+id/text_note_parent_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <include
                layout="@layout/include_toolbar_note"
                app:dataLoad='@{dataLoad}'
                app:editMode='@{editMode}'
                app:item='@{item}'
                app:theme='@{theme}'/>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="@dimen/recycler_margin"
                android:paddingBottom="@dimen/recycler_margin">

            <androidx.cardview.widget.CardView
                    android:id="@+id/text_note_content_card"
                    style="@style/Card"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="?attr/clBackgroundView"
                    app:cardCornerRadius="@dimen/radius_4dp"
                    app:cardUseCompatPadding="false">

                <ScrollView
                        android:id="@+id/text_note_content_scroll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true"
                        android:visibility='@{dataLoad ? View.VISIBLE : View.INVISIBLE}'>

                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <EditText
                                android:id="@+id/text_note_content_enter"
                                style="@style/EditText.TextNote.Enter"
                                android:hint="@string/hint_enter_text"
                                android:importantForAutofill="noExcludeDescendants"
                                android:text='@={item.text}'
                                android:visibility='@{editMode ? View.VISIBLE : View.INVISIBLE}'
                                tools:targetApi="o"
                                tools:visibility="invisible"/>

                        <!-- Set empty text need for editText may change size -->
                        <TextView
                                android:id="@+id/text_note_content_text"
                                style="@style/EditText.TextNote.Read"
                                android:text='@{editMode ? "" : item.text}'
                                android:visibility='@{!editMode ? View.VISIBLE : View.INVISIBLE}'
                                tools:text="@string/preview_note_text"/>

                    </FrameLayout>

                </ScrollView>

            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <include
                layout="@layout/include_note_panel"
                app:dataLoad='@{dataLoad}'
                app:editMode='@{editMode}'
                app:hideDivider='@{false}'
                app:inputAccess='@{inputAccess}'
                app:item='@{item}'
                app:menuCallback='@{menuCallback}'
                app:rankEmpty='@{rankEmpty}'/>

    </LinearLayout>

</layout>