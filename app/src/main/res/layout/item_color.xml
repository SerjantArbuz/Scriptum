<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="sgtmelon.handynotes.office.Help.Icon" />

        <variable
            name="position"
            type="int" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/layout_8dp">

        <ImageView
            android:id="@+id/itemColor_iv_background"
            android:layout_width="@dimen/icon_48dp"
            android:layout_height="@dimen/icon_48dp"
            android:layout_gravity="center"
            android:background='@{Icon.getColorIcon(context, position)}'
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/itemColor_iv_check"
            android:layout_width="@dimen/icon_24dp"
            android:layout_height="@dimen/icon_24dp"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:src='@{Icon.getColorCheck(context, position)}' />

        <ImageView
            android:id="@+id/itemColor_iv_click"
            android:layout_width="@dimen/icon_48dp"
            android:layout_height="@dimen/icon_48dp"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@null" />

    </FrameLayout>
</layout>