<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="java.util.List"/>
        <import alias="v" type="android.view.View"/>
        <import alias="noteType" type="sgtmelon.scriptum.office.annot.key.NoteType"/>

        <variable name="noteItem" type="sgtmelon.scriptum.app.model.item.NoteItem"/>

    </data>

    <LinearLayout
            android:id="@+id/note_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_8dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/note_info_rank_image"
                style="@style/NoteItem.Indicator.Info"
                android:contentDescription="@null"
                android:visibility='@{noteItem.rankId.size == 0 ? v.GONE : v.VISIBLE}'
                app:srcCompat="@drawable/ic_rank"/>

        <ImageView
                android:id="@+id/note_info_bind_image"
                style="@style/NoteItem.Indicator.Info"
                android:contentDescription="@null"
                android:src='@{noteItem.type == noteType.TEXT ? @drawable/ic_bind_text : @drawable/ic_bind_roll}'
                android:visibility='@{noteItem.status ? v.VISIBLE : v.GONE}'
                tools:srcCompat="@drawable/ic_bind_roll"/>

        <TextView
                android:id="@+id/note_info_progress_text"
                style="@style/NoteItem.Info"
                android:layout_width="wrap_content"
                android:text='@{noteItem.type == noteType.ROLL ? noteItem.text : ""}'
                android:visibility='@{noteItem.type == noteType.ROLL ?  v.VISIBLE : v.GONE}'
                tools:text="@string/preview_note_done"
                tools:visibility="visible"/>

        <TextView
                android:id="@+id/note_info_change_text"
                style="@style/NoteItem.Info"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:time='@{noteItem.change}'
                tools:text="@string/preview_note_time"/>

        <TextView
                android:id="@+id/note_info_create_text"
                style="@style/NoteItem.Info"
                android:layout_width="wrap_content"
                app:time='@{noteItem.create}'
                tools:text="@string/preview_note_time"/>

    </LinearLayout>

</layout>