<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:showIn="@layout/item_note_text">

    <data>

        <import alias="v" type="android.view.View"/>
        <import alias="noteType" type="sgtmelon.scriptum.model.key.NoteType"/>

        <variable name="noteModel" type="sgtmelon.scriptum.model.NoteModel"/>

    </data>

    <LinearLayout
            android:id="@+id/note_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_8dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/note_notification_image"
                style="@style/Image.Note.Info"
                android:contentDescription="@null"
                android:visibility='@{noteModel.alarmEntity.date.isEmpty() ? v.GONE : v.VISIBLE}'
                app:srcCompat="@drawable/ic_notifications"
                tools:visibility="visible"/>

        <ImageView
                android:id="@+id/note_info_bind_image"
                style="@style/Image.Note.Info"
                android:contentDescription="@null"
                android:src='@{noteModel.noteEntity.type == noteType.TEXT ? @drawable/ic_bind_text : @drawable/ic_bind_roll}'
                android:visibility='@{noteModel.noteEntity.status ? v.VISIBLE : v.GONE}'
                tools:srcCompat="@drawable/ic_bind_roll"
                tools:visibility="visible"/>

        <ImageView
                android:id="@+id/note_info_rank_image"
                style="@style/Image.Note.Info"
                android:contentDescription="@null"
                android:visibility='@{noteModel.noteEntity.rankId.size == 0 ? v.GONE : v.VISIBLE}'
                app:srcCompat="@drawable/ic_rank"
                tools:visibility="visible"/>

        <TextView
                android:id="@+id/note_info_progress_text"
                style="@style/Text.Note.Info"
                android:layout_width="wrap_content"
                android:text='@{noteModel.noteEntity.type == noteType.ROLL ? noteModel.noteEntity.text : ""}'
                android:visibility='@{noteModel.noteEntity.type == noteType.ROLL ?  v.VISIBLE : v.GONE}'
                tools:text="@string/preview_note_done"
                tools:visibility="visible"/>

        <TextView
                android:id="@+id/note_info_change_text"
                style="@style/Text.Note.Info"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:pastTime='@{noteModel.noteEntity.change}'
                tools:text="@string/preview_note_time"/>

        <TextView
                android:id="@+id/note_info_create_text"
                style="@style/Text.Note.Info"
                android:layout_width="wrap_content"
                app:pastTime='@{noteModel.noteEntity.create}'
                tools:text="@string/preview_note_time"/>

    </LinearLayout>

</layout>