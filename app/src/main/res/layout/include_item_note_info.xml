<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="sgtmelon.scriptum.office.Help.Time"/>

        <import alias="def"
                type="sgtmelon.scriptum.office.annot.def.TypeDef"/>

        <import alias="v"
                type="android.view.View"/>

        <variable name="noteItem"
                  type="sgtmelon.scriptum.app.model.item.NoteItem"/>

    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_8dp"
            android:orientation="horizontal">

        <ImageView
                style="@style/NoteItem.Indicator.Info"
                android:contentDescription="@null"
                android:visibility='@{noteItem.rankId.length == 0 ? v.GONE : v.VISIBLE}'
                app:srcCompat="@drawable/ic_rank"/>

        <ImageView
                style="@style/NoteItem.Indicator.Info"
                android:contentDescription="@null"
                android:src='@{noteItem.type == def.text ? @drawable/ic_bind_text : @drawable/ic_bind_roll}'
                android:visibility='@{noteItem.status ? v.VISIBLE : v.GONE}'
                tools:srcCompat="@drawable/ic_bind_roll"/>

        <TextView
                style="@style/NoteItem.Info"
                android:layout_width="wrap_content"
                android:text='@{noteItem.type == def.roll ? noteItem.text : ""}'
                android:visibility='@{noteItem.type == def.roll ?  v.VISIBLE : v.GONE}'
                tools:text="@string/test_note_done"
                tools:visibility="visible"/>

        <TextView
                style="@style/NoteItem.Info"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text='@{Time.formatNoteDate(context, noteItem.change)}'
                tools:text="@string/test_note_time"/>

        <TextView
                style="@style/NoteItem.Info"
                android:layout_width="wrap_content"
                android:text='@{Time.formatNoteDate(context, noteItem.create)}'
                tools:text="@string/test_note_time"/>

    </LinearLayout>

</layout>