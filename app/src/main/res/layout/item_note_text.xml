<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import alias="v" type="android.view.View"/>
        <import alias="text" type="android.text.TextUtils"/>
        <import alias="def" type="sgtmelon.scriptum.office.annot.def.ThemeDef"/>

        <variable name="noteItem" type="sgtmelon.scriptum.app.model.item.NoteItem"/>

    </data>

    <androidx.cardview.widget.CardView
            android:id="@+id/note_text_parent_card"
            style="@style/Card"
            app:cardCornerRadius="@dimen/radius_4dp"
            app:cardUseCompatPadding="false"
            app:noteColor='@{noteItem.color}'
            tools:cardBackgroundColor="@color/note_green_light">

        <FrameLayout
                android:id="@+id/note_text_click_container"
                style="@style/NoteItem.Click">

            <LinearLayout style="@style/NoteItem.Container">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/note_text_name_text"
                            style="@style/NoteItem.Name"
                            android:text='@{noteItem.name}'
                            android:visibility='@{text.isEmpty(noteItem.name) ? v.GONE : v.VISIBLE}'
                            tools:text="@string/preview_note_name"/>

                    <TextView
                            android:id="@+id/note_text_content_text"
                            style="@style/NoteItem.Text"
                            android:text='@{noteItem.text}'
                            tools:text="@string/preview_note_text"/>

                    <include
                            layout="@layout/include_item_note_info"
                            app:noteItem='@{noteItem}'/>

                </LinearLayout>

                <ImageView
                        android:id="@+id/note_text_color_view"
                        style="@style/NoteItem.Color.Vertical"
                        android:contentDescription="@null"
                        app:noteColor='@{noteItem.color}'
                        app:viewOnDark='@{true}'
                        app:visibleOn='@{def.dark}'
                        tools:tint="@color/note_green_dark"
                        tools:visibility="gone"/>

            </LinearLayout>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</layout>