<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="sgtmelon.scriptum.model.annotation.Theme"/>

        <variable name="currentTheme" type="int"/>
        <variable name="noteItem" type="sgtmelon.scriptum.model.item.NoteItem"/>
    </data>

    <androidx.cardview.widget.CardView
            android:id="@+id/note_text_parent_card"
            style="@style/Card"
            app:cardCornerRadius="@dimen/radius_4dp"
            app:cardUseCompatPadding="false"
            app:noteTheme='@{currentTheme}'
            app:noteColor='@{noteItem.color}'
            tools:cardBackgroundColor="@color/note_green_light">

        <FrameLayout
                android:id="@+id/note_text_click_container"
                style="@style/Container.Note.Click">

            <LinearLayout style="@style/Container.Note.Content">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/note_text_name_text"
                            style="@style/Text.Note.Name"
                            android:text='@{noteItem.name}'
                            android:visibility='@{!noteItem.name.isEmpty() ? View.VISIBLE : View.GONE}'
                            tools:text="@string/preview_note_name"/>

                    <TextView
                            android:id="@+id/note_text_content_text"
                            style="@style/Text.Note.Content"
                            android:text='@{noteItem.text}'
                            tools:text="@string/preview_note_text"/>

                    <include
                            layout="@layout/include_item_note_info"
                            app:noteItem='@{noteItem}'/>

                </LinearLayout>

                <View
                        android:id="@+id/note_text_color_view"
                        style="@style/Image.Color.Vertical.End"
                        android:contentDescription="@null"
                        app:indicatorColor='@{noteItem.color}'
                        app:indicatorTheme='@{currentTheme}'
                        app:visibleOn='@{Theme.DARK}'
                        app:visibleTheme='@{currentTheme}'
                        tools:tint="@color/note_green_dark"
                        tools:visibility="gone"/>

            </LinearLayout>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</layout>