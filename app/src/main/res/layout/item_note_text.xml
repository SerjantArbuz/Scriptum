<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="sgtmelon.handynotes.office.Help.Icon" />

        <import type="sgtmelon.handynotes.office.Help.Time" />

        <import
            alias="text"
            type="android.text.TextUtils" />

        <import
            alias="v"
            type="android.view.View" />

        <variable
            name="itemNote"
            type="sgtmelon.handynotes.app.model.item.ItemNote" />

    </data>

    <androidx.cardview.widget.CardView
        style="@style/ItemCardView"
        app:cardBackgroundColor='@{Icon.getColor(context, false, itemNote.color)}'
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:id="@+id/itemNote_ll_click"
            style="@style/Note.Click">

            <TextView
                android:id="@+id/itemNote_tv_name"
                style="@style/Note.Name"
                android:text='@{itemNote.name}'
                android:visibility='@{text.isEmpty(itemNote.name) ? v.GONE : v.VISIBLE}' />

            <TextView
                android:id="@+id/itemNote_tv_text"
                style="@style/Note.Text"
                android:text='@{itemNote.text}' />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/itemNote_iv_rank"
                    style="@style/Note.Indicator"
                    android:layout_marginEnd="@dimen/item_layout_small_indent"
                    android:layout_marginRight="@dimen/item_layout_small_indent"
                    android:visibility='@{itemNote.rankId.length == 0 ? v.GONE : v.VISIBLE}'
                    app:srcCompat="@drawable/ic_rank" />

                <ImageView
                    android:id="@+id/itemNote_iv_bind"
                    style="@style/Note.Indicator"
                    android:layout_marginEnd="@dimen/item_layout_small_indent"
                    android:layout_marginRight="@dimen/item_layout_small_indent"
                    android:visibility='@{itemNote.status ? v.VISIBLE : v.GONE}'
                    app:srcCompat="@drawable/ic_bind_text" />

                <TextView
                    android:id="@+id/itemNote_tv_change"
                    style="@style/Note.Info"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text='@{Time.formatNoteDate(context, itemNote.change)}' />

                <TextView
                    android:id="@+id/itemNote_tv_create"
                    style="@style/Note.Info"
                    android:layout_width="wrap_content"
                    android:text='@{Time.formatNoteDate(context, itemNote.create)}' />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>