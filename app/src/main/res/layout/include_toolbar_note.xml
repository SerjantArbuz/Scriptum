<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:showIn="@layout/fragment_text_note">

    <data>
        <import type="sgtmelon.scriptum.R"/>
        <import type="android.view.View"/>
        <import type="sgtmelon.scriptum.model.annotation.Theme"/>

        <variable name="theme" type="int"/>
        <variable name="dataLoad" type="boolean"/>

        <variable name="item" type="sgtmelon.scriptum.model.item.NoteItem"/>
        <variable name="editMode" type="boolean"/>
    </data>

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbar_note_parent_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="@dimen/elevation_0dp">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_note_content_container"
                style="?attr/styleToolbar"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/layout_8dp"
                android:paddingRight="@dimen/layout_8dp"
                app:contentInsetStartWithNavigation="56dp"
                app:popupTheme="?attr/themePopup">

            <HorizontalScrollView
                    android:id="@+id/toolbar_note_scroll"
                    style="@style/Container.ToolbarNote.Scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility='@{dataLoad ? View.VISIBLE : View.INVISIBLE}'>

                <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/layout_24dp"
                        android:layout_marginRight="@dimen/layout_24dp">

                    <EditText
                            android:id="@+id/toolbar_note_enter"
                            style="@style/EditText.ToolbarNote"
                            android:hint="@string/hint_enter_name"
                            android:importantForAutofill="noExcludeDescendants"
                            android:text='@={item.name}'
                            android:visibility='@{editMode ? View.VISIBLE : View.INVISIBLE}'
                            tools:targetApi="o"
                            tools:visibility="invisible"/>

                    <!-- Set empty text need for editText may change size -->
                    <TextView
                            android:id="@+id/toolbar_note_text"
                            style="@style/Text.ToolbarNote"
                            android:hint="@string/hint_text_name"
                            android:text='@{editMode ? "" : item.name}'
                            android:visibility='@{!editMode ? View.VISIBLE : View.INVISIBLE}'
                            tools:text="@string/preview_note_name"/>

                </FrameLayout>

            </HorizontalScrollView>

        </androidx.appcompat.widget.Toolbar>

        <View
                android:id="@+id/toolbar_note_color_view"
                style="@style/Image.Color.Horizontal"
                app:visibleTheme='@{theme}'
                app:visibleOn='@{Theme.DARK}'
                tools:background="@color/note_red_dark"
                tools:visibility="gone"/>

        <View
                style="@style/Divider.Horizontal"
                app:visibleTheme='@{theme}'
                app:visibleOn='@{Theme.LIGHT}'/>

    </com.google.android.material.appbar.AppBarLayout>

</layout>