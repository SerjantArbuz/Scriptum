<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="sgtmelon.scriptum.R"/>
        <import alias="v" type="android.view.View"/>
        <import alias="def" type="sgtmelon.scriptum.office.annot.def.ThemeDef"/>

        <variable name="keyEdit" type="boolean"/>
        <variable name="noteItem" type="sgtmelon.scriptum.app.model.item.NoteItem"/>

    </data>

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="@dimen/elevation_0dp">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                style="?attr/styleToolbar"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/layout_8dp"
                android:paddingRight="@dimen/layout_8dp"
                app:contentInsetStartWithNavigation="56dp"
                app:popupTheme="?attr/themePopup">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/layout_24dp"
                    android:layout_marginRight="@dimen/layout_24dp">

                <EditText
                        android:id="@+id/name_enter"
                        style="@style/ToolbarNote.Enter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_enter_name"
                        android:importantForAutofill="noExcludeDescendants"
                        android:text='@={noteItem.name}'
                        android:visibility='@{keyEdit ? v.VISIBLE : v.GONE}'
                        tools:targetApi="o"
                        tools:text="@string/test_note_name"/>

                <HorizontalScrollView
                        style="@style/ToolbarNote.Scroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility='@{!keyEdit ? v.VISIBLE : v.GONE}'
                        tools:visibility="invisible">

                    <TextView
                            style="@style/ToolbarNote.Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_view_name"
                            android:text='@{noteItem.name}'/>

                </HorizontalScrollView>

            </FrameLayout>

        </androidx.appcompat.widget.Toolbar>

        <View
                android:id="@+id/color_view"
                style="@style/NoteItem.Color.Horizontal"
                app:visibleOn='@{def.dark}'
                tools:background="@color/note_red_dark"
                tools:visibility="gone"/>

        <View style="@style/Divider.Horizontal"
              app:visibleOn='@{def.light}'/>

    </com.google.android.material.appbar.AppBarLayout>

</layout>