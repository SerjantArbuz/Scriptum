<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>

        <variable name="theme" type="int"/>
        <variable name="menuCallback" type="sgtmelon.scriptum.screen.ui.callback.note.INoteMenu"/>
        <variable name="dataLoad" type="boolean"/>

        <variable name="item" type="sgtmelon.scriptum.model.item.NoteItem"/>
        <variable name="rankEmpty" type="boolean"/>
        <variable name="editMode" type="boolean"/>

        <variable name="inputAccess" type="sgtmelon.scriptum.control.input.InputControl.Access"/>

        <variable name="enterEmpty" type="boolean"/>
    </data>

    <LinearLayout
            android:id="@+id/roll_note_parent_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <include
                layout="@layout/include_toolbar_note"
                app:dataLoad='@{dataLoad}'
                app:editMode='@{editMode}'
                app:item='@{item}'
                app:theme='@{theme}'/>

        <LinearLayout
                android:id="@+id/roll_note_content_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/roll_note_recycler"
                    style="@style/RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility='@{dataLoad ? View.VISIBLE : View.INVISIBLE}'
                    tools:itemCount="3"
                    tools:listitem="@layout/item_roll_write"/>

            <include layout="@layout/include_roll_note_enter"
                     app:editMode='@{editMode}'
                     app:enterEmpty='@{enterEmpty}'/>

            <include
                    layout="@layout/include_note_panel"
                    app:dataLoad='@{dataLoad}'
                    app:editMode='@{editMode}'
                    app:inputAccess='@{inputAccess}'
                    app:item='@{item}'
                    app:menuCallback='@{menuCallback}'
                    app:rankEmpty='@{rankEmpty}'/>

        </LinearLayout>

    </LinearLayout>

</layout>