<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable name="menuCallback" type="sgtmelon.scriptum.screen.callback.note.roll.RollNoteMenuCallback"/>
        <variable name="rankEmpty" type="boolean"/>

        <variable name="noteItem" type="sgtmelon.scriptum.model.item.NoteItem"/>
        <variable name="keyEdit" type="boolean"/>

        <variable name="enterEmpty" type="boolean"/>

        <variable name="undoAccess" type="boolean"/>
        <variable name="redoAccess" type="boolean"/>

        <variable name="saveEnabled" type="boolean"/>

    </data>

    <LinearLayout
            android:id="@+id/roll_note_parent_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <include
                layout="@layout/include_toolbar_note"
                app:keyEdit='@{keyEdit}'
                app:noteItem='@{noteItem}'/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/roll_note_recycler"
                style="@style/RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        <include layout="@layout/include_roll_note_enter"
                 app:enterEmpty='@{enterEmpty}'
                 app:keyEdit='@{keyEdit}'/>

        <include layout="@layout/include_roll_note_panel"
                 app:keyEdit='@{keyEdit}'
                 app:menuCallback='@{menuCallback}'
                 app:noteItem='@{noteItem}'
                 app:rankEmpty='@{rankEmpty}'
                 app:redoAccess='@{redoAccess}'
                 app:saveEnabled='@{saveEnabled}'
                 app:undoAccess='@{undoAccess}'/>

    </LinearLayout>

</layout>