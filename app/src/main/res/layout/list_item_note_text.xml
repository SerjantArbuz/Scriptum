<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_itemNote_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_layout_main_indent"
    android:background="@color/noteWhiteDark">

    <FrameLayout
        android:id="@+id/layout_itemNote_subMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_layout_sub_indent"
        android:background="@color/noteWhite">

        <LinearLayout
            android:id="@+id/layout_itemNote_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical"
            android:padding="@dimen/item_layout_medium_indent">

            <TextView
                android:id="@+id/tView_itemNote_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_layout_medium_indent"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/test_item_note_name"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/text_big_size"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tView_itemNote_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_layout_medium_indent"
                android:ellipsize="end"
                android:maxLines="5"
                android:text="@string/test_item_note_text"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/text_medium_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iView_itemNote_rank"
                    android:layout_width="@dimen/icon_small_size"
                    android:layout_height="@dimen/icon_small_size"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/item_layout_small_indent"
                    android:layout_marginRight="@dimen/item_layout_small_indent"
                    android:tint="@color/colorDark"
                    app:srcCompat="@drawable/ic_menu_rank" />

                <ImageView
                    android:id="@+id/iView_itemNote_bind"
                    android:layout_width="@dimen/icon_small_size"
                    android:layout_height="@dimen/icon_small_size"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/item_layout_small_indent"
                    android:layout_marginRight="@dimen/item_layout_small_indent"
                    android:tint="@color/colorDark"
                    app:srcCompat="@drawable/ic_menu_bind_text" />

                <TextView
                    android:id="@+id/tView_itemNote_change"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/item_layout_small_indent"
                    android:layout_marginRight="@dimen/item_layout_small_indent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/test_item_note_change"
                    android:textColor="@color/colorDark"
                    android:textSize="@dimen/text_small_size" />

                <TextView
                    android:id="@+id/tView_itemNote_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/item_layout_small_indent"
                    android:layout_marginRight="@dimen/item_layout_small_indent"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/test_item_note_create"
                    android:textColor="@color/colorDark"
                    android:textSize="@dimen/text_small_size" />

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</FrameLayout>