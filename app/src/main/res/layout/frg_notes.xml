<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import
            alias="v"
            type="android.view.View" />

        <variable
            name="listEmpty"
            type="boolean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <include layout="@layout/inc_toolbar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/frgNotes_ll_empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:animateLayoutChanges="true"
                android:visibility='@{listEmpty ? v.VISIBLE : v.GONE}'>

                <ImageView
                    android:layout_width="@dimen/icon_logo_size"
                    android:layout_height="@dimen/icon_logo_size"
                    android:tint="@color/colorDarkSecond"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/ic_note" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/item_layout_small_indent"
                    android:text="@string/info_notes_empty"
                    android:textColor="@color/colorDarkSecond"
                    android:textSize="@dimen/text_big_size" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/frgNotes_rv"
                style="@style/RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility='@{!listEmpty ? v.VISIBLE : v.GONE}' />

        </FrameLayout>

    </LinearLayout>

</layout>