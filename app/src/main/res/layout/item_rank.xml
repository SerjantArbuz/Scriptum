<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>

        <variable name="item" type="sgtmelon.scriptum.domain.model.item.RankItem"/>
    </data>

    <androidx.cardview.widget.CardView
            android:id="@+id/rank_parent_card"
            style="@style/Card"
            app:cardBackgroundColor="?attr/clBackgroundView"
            app:cardCornerRadius="@dimen/radius_4dp"
            app:cardUseCompatPadding="false">

        <LinearLayout
                android:id="@+id/rank_click_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:padding="@dimen/layout_8dp"
                android:weightSum="1">

            <include
                    layout="@layout/include_item_rank_button"
                    app:item='@{item}'/>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layout_4dp"
                    android:layout_marginLeft="@dimen/layout_4dp"
                    android:layout_marginEnd="@dimen/layout_4dp"
                    android:layout_marginRight="@dimen/layout_4dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/rank_name_text"
                        style="@style/Text.SmallCard.Title"
                        android:text='@{item.name}'
                        tools:text="@string/preview_rank_name"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@drawable/div_space_middle"
                        android:showDividers="middle">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:divider="@drawable/div_space_small"
                            android:visibility='@{item.hasNotification || item.hasBind ? View.VISIBLE : View.GONE}'
                            android:showDividers="middle">

                        <ImageView
                                android:id="@+id/rank_notification_image"
                                style="@style/Image.Rank"
                                android:importantForAccessibility="no"
                                android:visibility='@{item.hasNotification ? View.VISIBLE : View.GONE}'
                                app:srcCompat="@drawable/ic_notifications"
                                tools:visibility="visible"/>

                        <ImageView
                                android:id="@+id/rank_bind_image"
                                style="@style/Image.Rank"
                                android:importantForAccessibility="no"
                                android:visibility='@{item.hasBind ? View.VISIBLE : View.GONE}'
                                app:srcCompat="@drawable/ic_bind_text"
                                tools:visibility="visible"/>

                    </LinearLayout>

                    <TextView
                            android:id="@+id/rank_text_count_text"
                            style="@style/Text.SmallCard.Subtitle"
                            android:text='@{@string/list_item_rank_count + " " + item.noteId.size()}'
                            tools:text="@string/preview_rank_count"/>

                </LinearLayout>

            </LinearLayout>

            <ImageButton
                    android:id="@+id/rank_cancel_button"
                    style="@style/Button.Medium"
                    android:layout_marginStart="@dimen/layout_8dp"
                    android:layout_marginLeft="@dimen/layout_8dp"
                    android:layout_marginEnd="@dimen/layout_4dp"
                    android:layout_marginRight="@dimen/layout_4dp"
                    android:contentDescription='@{@string/description_item_rank_cancel + " " + item.name}'
                    android:tint="?attr/clContent"
                    app:srcCompat="@drawable/ic_cancel_enter"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>