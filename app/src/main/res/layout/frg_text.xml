<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import
            alias="v"
            type="android.view.View" />

        <variable
            name="itemNote"
            type="sgtmelon.handynotes.app.model.item.ItemNote" />

        <variable
            name="keyEdit"
            type="boolean" />

        <variable
            name="keyCreate"
            type="boolean" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/clBackgroundEnter">

        <include
            layout="@layout/inc_toolbar_note"
            app:itemNote='@{itemNote}'
            app:keyCreate='@{keyCreate}'
            app:keyEdit='@{keyEdit}' />

        <ScrollView style="@style/Text.Scroll"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/frgText_et_enter"
                    style="@style/Text.Enter"
                    android:text='@={itemNote.text}'
                    android:visibility='@{keyEdit ? v.VISIBLE : v.INVISIBLE}' />

                <TextView
                    android:id="@+id/frgText_tv_text"
                    style="@style/Text.Read"
                    android:text='@{itemNote.text}'
                    android:visibility='@{!keyEdit ? v.VISIBLE : v.INVISIBLE}' />

            </FrameLayout>

        </ScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>