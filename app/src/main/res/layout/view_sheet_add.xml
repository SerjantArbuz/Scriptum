<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_8dp"
            android:background="@drawable/bg_sheet_dialog"
            android:paddingTop="@dimen/radius_8dp"
            android:paddingBottom="@dimen/radius_8dp">

        <com.google.android.material.navigation.NavigationView
                android:id="@+id/add_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/NavigationView"
                app:itemTextColor="?attr/clContent"
                app:menu="@menu/sheet_add"/>

    </FrameLayout>

</FrameLayout>