<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import
            alias="v"
            type="android.view.View" />

        <variable
            name="itemNote"
            type="sgtmelon.handynotes.model.item.ItemNote" />

        <variable
            name="keyEdit"
            type="boolean" />

    </data>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="@dimen/app_bar_no_elevation">

        <android.support.v7.widget.Toolbar
            android:id="@+id/incToolbar_tb"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/AppTheme.AppBarTheme"
            app:contentInsetEnd="@dimen/item_layout_medium_indent"
            app:contentInsetLeft="@dimen/item_layout_medium_indent"
            app:contentInsetRight="@dimen/item_layout_medium_indent"
            app:contentInsetStart="@dimen/item_layout_medium_indent"
            app:popupTheme="@style/AppTheme.AppBarTheme">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/incToolbarNote_et_name"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="@string/hint_enter_name"
                    android:imeOptions="actionNext|flagNoFullscreen"
                    android:inputType="textCapSentences|textAutoCorrect|textAutoComplete"
                    android:maxLength="@integer/length_max_note_name"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:text='@={itemNote.name}'
                    android:textColor="@color/colorDark"
                    android:textColorHint="@color/colorDark"
                    android:visibility='@{keyEdit ? v.VISIBLE : v.GONE}' />

                <HorizontalScrollView
                    android:id="@+id/incToolbarNote_hsv_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:visibility='@{!keyEdit ? v.VISIBLE : v.GONE}'>

                    <TextView
                        android:id="@+id/incToolbarNote_tv_name"
                        style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:hint="@string/hint_view_name"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:text='@{itemNote.name}'
                        android:textColor="@color/colorDark"
                        android:textColorHint="@color/colorDark"
                        android:textIsSelectable="true" />

                </HorizontalScrollView>
            </FrameLayout>

        </android.support.v7.widget.Toolbar>

        <View style="@style/Divider.Horizontal" />

    </android.support.design.widget.AppBarLayout>

</layout>