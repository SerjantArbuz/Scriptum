<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import
            alias="v"
            type="android.view.View" />

        <variable
            name="itemNote"
            type="sgtmelon.handynotes.app.model.item.ItemNote" />

        <variable
            name="keyEdit"
            type="boolean" />

        <variable
            name="keyCreate"
            type="boolean" />

    </data>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="@dimen/elevation_0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/incToolbar_tb"
            style="@style/Toolbar.Dark"
            app:contentInsetEnd="@dimen/layout_8dp"
            app:contentInsetLeft="@dimen/layout_8dp"
            app:contentInsetRight="@dimen/layout_8dp"
            app:contentInsetStart="@dimen/layout_8dp"
            app:navigationIcon='@{keyEdit &amp;&amp; !keyCreate ? @drawable/ic_cancel : @drawable/ic_arrow_back}'
            app:popupTheme="@style/App.Dark.ToolbarTheme">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/incToolbarNote_et_name"
                    style="@style/ToolbarNote.Enter"
                    android:hint="@string/hint_enter_name"
                    android:text='@={itemNote.name}'
                    android:visibility='@{keyEdit ? v.VISIBLE : v.GONE}' />

                <HorizontalScrollView
                    android:id="@+id/incToolbarNote_hsv_name"
                    style="@style/ToolbarNote.Scroll"
                    android:visibility='@{!keyEdit ? v.VISIBLE : v.GONE}'>

                    <TextView
                        android:id="@+id/incToolbarNote_tv_name"
                        style="@style/ToolbarNote.Text"
                        android:hint="@string/hint_view_name"
                        android:text='@{itemNote.name}' />

                </HorizontalScrollView>
            </FrameLayout>

        </androidx.appcompat.widget.Toolbar>

        <View style="@style/Divider.Horizontal" />

    </com.google.android.material.appbar.AppBarLayout>

</layout>