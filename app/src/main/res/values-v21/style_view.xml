<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/AppTheme.AppBarTheme</item>
    </style>

    <style name="ItemCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/item_layout_main_indent</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textColorHint">@color/colorDarkSecond</item>
    </style>

    <style name="RecyclerView">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/item_layout_main_indent</item>
        <item name="android:paddingTop">@dimen/item_layout_main_indent</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_layout_sub_indent</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_width">@dimen/item_layout_sub_indent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>