<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App.Light.UI">
        <item name="android:windowBackground">?attr/clBackground</item>

        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="App.Dark.UI">
        <item name="android:windowBackground">?attr/clBackground</item>

        <item name="android:navigationBarColor">?attr/colorPrimary</item>
    </style>

    <style name="BottomSheetTheme.Light" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="BottomSheetTheme.Dark" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
    </style>

</resources>