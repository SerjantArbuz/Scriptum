<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="@dimen/elevation_4dp"
        android:stateListAnimator="@null">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="?attr/styleToolbar"
            app:contentInsetEnd="@dimen/layout_8dp"
            app:contentInsetLeft="@dimen/layout_8dp"
            app:contentInsetRight="@dimen/layout_8dp"
            app:contentInsetStart="@dimen/layout_8dp"
            app:popupTheme="?attr/themePopup">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/clBackgroundEnter"
                app:cardCornerRadius="@dimen/radius_4dp"
                app:cardUseCompatPadding="false">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageButton
                        android:id="@+id/cancel_button"
                        style="@style/Enter.Button"
                        android:contentDescription="@null"
                        app:srcCompat="@drawable/ic_cancel_on"
                        tools:tint="?attr/clIcon"/>

                <EditText
                        android:id="@+id/rank_enter"
                        style="@style/Enter.Text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/hint_enter_rank_new"
                        android:imeOptions="flagNoFullscreen|actionDone"
                        android:inputType="textCapSentences|textAutoCorrect|textAutoComplete"
                        android:maxLength="@integer/length_rank_name"
                        android:maxLines="1"/>

                <ImageButton
                        android:id="@+id/add_button"
                        style="@style/Enter.Button"
                        android:contentDescription="@null"
                        app:srcCompat="@drawable/ic_rank"
                        tools:tint="?attr/clAccent"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.Toolbar>

</com.google.android.material.appbar.AppBarLayout>