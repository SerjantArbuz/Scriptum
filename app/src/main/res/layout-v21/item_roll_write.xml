<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="sgtmelon.scriptum.R"/>

        <variable name="rollItem" type="sgtmelon.scriptum.app.model.item.RollItem"/>

    </data>

    <androidx.cardview.widget.CardView
            style="@style/Card"
            app:cardBackgroundColor="?attr/clBackgroundView"
            app:cardCornerRadius="@dimen/radius_4dp"
            app:cardUseCompatPadding="false">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <CheckBox style="@style/RollItem.Write.Check"/>

                <sgtmelon.iconanim.library.SwitchButtonAnim
                        android:id="@+id/click_button"
                        style="@style/RollItem.Click"
                        android:contentDescription="@null"
                        tools:srcSelect="@drawable/ic_move"
                        app:boolExpression='@{true}'
                        app:checkState='@{rollItem.check}'
                        tools:tint="?attr/clAccent"/>

            </FrameLayout>

            <EditText
                    android:id="@+id/roll_enter"
                    style="@style/RollItem.Write.Enter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@null"
                    android:importantForAutofill="noExcludeDescendants"
                    android:text='@{rollItem.text}'
                    tools:targetApi="o"
                    tools:text="@string/test_note_roll"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>