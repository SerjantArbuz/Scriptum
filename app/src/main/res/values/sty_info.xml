<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Info" />

    <style name="Info.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="Info.Image">
        <item name="android:layout_width">@dimen/icon_128dp</item>
        <item name="android:layout_height">@dimen/icon_128dp</item>
    </style>

    <style name="Info.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/layout_4dp</item>
        <item name="android:textColor">?attr/clText</item>
        <item name="android:textSize">@dimen/text_18sp</item>
    </style>

    <style name="Info.Details" parent="Info.Title">
        <item name="android:textColor">?attr/clSecond</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:padding">@dimen/layout_8dp</item>
    </style>

</resources>