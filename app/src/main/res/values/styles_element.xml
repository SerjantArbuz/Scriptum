<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NavigationView">
        <item name="android:background">?attr/clPrimary</item>
        <item name="android:textColorSecondary">?attr/clContentSecond</item>
    </style>

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/card_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/card_margin_vertical</item>
        <item name="android:layout_marginLeft">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/card_margin_horizontal</item>
    </style>

    <style name="RecyclerView">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/recycler_margin</item>
        <item name="android:paddingTop">@dimen/recycler_margin</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/clContent</item>
        <item name="android:textColorHint">?attr/clDisable</item>
    </style>

    <style name="Divider">
        <item name="android:background">?attr/clDivider</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_1dp</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_width">@dimen/layout_1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>