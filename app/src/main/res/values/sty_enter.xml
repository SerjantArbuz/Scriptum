<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Enter" />

    <style name="Enter.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/layout_4dp</item>
        <item name="android:layout_marginRight">@dimen/layout_4dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/layout_8dp</item>

    </style>

    <style name="Enter.Text" parent="EditText">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/layout_8dp</item>
        <item name="android:layout_marginRight">@dimen/layout_8dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="android:textColor">?attr/clText</item>
    </style>

</resources>