<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NoteItem" />

    <style name="NoteItem.Click">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="NoteItem.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/layout_8dp</item>
    </style>

    <style name="NoteItem.Container.Roll">
        <item name="android:padding">@dimen/layout_0dp</item>
    </style>

    <style name="NoteItem.Indicator">
        <item name="android:layout_width">@dimen/icon_16dp</item>
        <item name="android:layout_height">@dimen/icon_16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">?attr/clIcon</item>
    </style>

    <style name="NoteItem.Name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/layout_8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/clText</item>
        <item name="android:textSize">@dimen/text_18sp</item>
    </style>

    <style name="NoteItem.Roll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/layout_4dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/clText</item>
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>

    <style name="NoteItem.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">5</item>
        <item name="android:textColor">?attr/clText</item>
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>

    <style name="NoteItem.Info">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/layout_4dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/clNoteInfoText</item>
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>

    <style name="NoteItem.Indicator.Info">
        <item name="android:layout_marginRight">@dimen/layout_4dp</item>
        <item name="android:tint">?attr/clNoteIndicator</item>
    </style>

    <style name="NoteItem.Color" />

    <style name="NoteItem.Color.Vertical">
        <item name="android:layout_width">@dimen/layout_4dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/layout_4dp</item>
        <item name="android:layout_marginLeft">@dimen/layout_4dp</item>
    </style>

    <style name="NoteItem.Color.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_4dp</item>
    </style>

</resources>