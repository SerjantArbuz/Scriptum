<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SortItem" />

    <style name="SortItem.Bracket">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/layout_4dp</item>
        <item name="android:layout_marginRight">@dimen/layout_4dp</item>
        <item name="android:tint">?attr/clAccent</item>
    </style>

    <style name="SortItem.Text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/layout_16dp</item>
        <item name="android:layout_marginBottom">@dimen/layout_16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>

</resources>