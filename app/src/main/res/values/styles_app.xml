<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="App"/>

    <style name="App.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="clAccent">@color/accent_light</item>
        <item name="clPrimary">@color/primary_light</item>

        <item name="clDivider">@color/divider_light</item>
        <item name="clBackgroundWindow">@color/background_window_light</item>
        <item name="clBackgroundView">@color/background_view_light</item>
        <item name="clBackgroundEnter">@color/background_enter_light</item>

        <item name="clContent">@color/content_light</item>
        <item name="clContentSecond">@color/content_second_light</item>
        <item name="clContrast">@color/contrast_light</item>
        <item name="clDisable">@color/disable_light</item>

        <item name="clNoteIndicator">?attr/clContent</item>

        <item name="colorPrimary">?attr/clPrimary</item>
        <item name="colorPrimaryDark">?attr/clContentSecond</item>
        <item name="colorAccent">?attr/clAccent</item>

        <item name="styleToolbar">@style/Toolbar.Light</item>
        <item name="themePopup">@style/PopupTheme.Light</item>
        <item name="styleFab">@style/Fab.Light</item>
        <item name="styleSheetAdd">@style/SheetDialog.Light</item>
        <item name="styleProgressHorizontal">@style/ProgressBar.Horizontal.Light</item>

        <item name="alertDialogStyle">@style/Alert.Light</item>
        <item name="alertDialogTheme">@style/Alert.Light</item>

        <item name="bottomSheetDialogTheme">@style/BottomSheetTheme.Light</item>

        <item name="snackbarStyle">@style/MaterialSnackbarTheme</item>
    </style>

    <style name="MaterialSnackbarTheme" parent="Widget.MaterialComponents.Snackbar"/>


    <style name="App.Light.UI">
        <item name="android:windowBackground">?attr/clBackgroundWindow</item>
    </style>

    <style name="App.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="clAccent">@color/accent_dark</item>
        <item name="clPrimary">@color/primary_dark</item>

        <item name="clDivider">@color/divider_dark</item>
        <item name="clBackgroundWindow">@color/background_window_dark</item>
        <item name="clBackgroundView">@color/background_view_dark</item>
        <item name="clBackgroundEnter">@color/background_enter_dark</item>

        <item name="clContent">@color/content_dark</item>
        <item name="clContentSecond">@color/content_second_dark</item>
        <item name="clContrast">@color/contrast_dark</item>
        <item name="clDisable">@color/disable_dark</item>

        <item name="clNoteIndicator">?attr/clAccent</item>

        <item name="colorPrimary">?attr/clPrimary</item>
        <item name="colorPrimaryDark">?attr/clPrimary</item>
        <item name="colorAccent">?attr/clAccent</item>

        <item name="styleToolbar">@style/Toolbar.Dark</item>
        <item name="themePopup">@style/PopupTheme.Dark</item>
        <item name="styleFab">@style/Fab.Dark</item>
        <item name="styleSheetAdd">@style/SheetDialog.Dark</item>
        <item name="styleProgressHorizontal">@style/ProgressBar.Horizontal.Dark</item>

        <item name="alertDialogStyle">@style/Alert.Dark</item>
        <item name="alertDialogTheme">@style/Alert.Dark</item>

        <item name="bottomSheetDialogTheme">@style/BottomSheetTheme.Dark</item>
    </style>

    <style name="App.Dark.UI">
        <item name="android:windowBackground">?attr/clBackgroundWindow</item>
    </style>

    <style name="App.Splash" parent="App.Dark.UI">
        <item name="colorPrimaryDark">@color/background_launcher</item>
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>

        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            ?attr/colorPrimaryDark
        </item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">
            ?attr/colorPrimaryDark
        </item>
    </style>

    <style name="App.Intro" parent="App.Splash">
        <item name="android:windowBackground">?attr/colorPrimaryDark</item>
    </style>

    <!-- -->

    <style name="Alert.Light" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">?attr/clAccent</item>
    </style>

    <style name="Alert.Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">?attr/clAccent</item>
    </style>

    <style name="BottomSheetTheme.Light" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetTheme.Dark" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PopupTheme.Light" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">?attr/clContent</item>
        <item name="android:textColorSecondary">?attr/clContent</item>
        <item name="colorControlNormal">?attr/clContent</item>
        <item name="actionMenuTextColor">?attr/clContent</item>
    </style>

    <style name="PopupTheme.Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">?attr/clContent</item>
        <item name="android:textColorSecondary">?attr/clContent</item>
        <item name="colorControlNormal">?attr/clContent</item>
        <item name="actionMenuTextColor">?attr/clContent</item>
    </style>

    <!-- -->

    <!--  Separate drawable related with attr bug on preLollipop versions.  -->
    <style name="SheetDialog"/>

    <style name="SheetDialog.Light">
        <item name="android:background">@drawable/bg_dialog_light</item>
    </style>

    <style name="SheetDialog.Dark">
        <item name="android:background">@drawable/bg_dialog_dark</item>
    </style>

    <!-- -->

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Toolbar.Light">
        <item name="android:theme">@style/PopupTheme.Light</item>
    </style>

    <style name="Toolbar.Dark">
        <item name="android:theme">@style/PopupTheme.Dark</item>
    </style>

    <style name="Fab.Light" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:tint">?attr/clBackgroundView</item>
    </style>

    <style name="Fab.Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:tint">?attr/clBackgroundView</item>
    </style>

    <!--  Separate drawable related with attr bug on preLollipop versions.  -->
    <style name="ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal"/>

    <style name="ProgressBar.Horizontal.Light">
        <item name="android:progressDrawable">@drawable/bg_progress_light</item>
    </style>

    <style name="ProgressBar.Horizontal.Dark">
        <item name="android:progressDrawable">@drawable/bg_progress_dark</item>
    </style>

</resources>