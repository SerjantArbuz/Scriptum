<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarNote"/>

    <style name="ToolbarNote.Enter" parent="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:imeOptions">actionNext|flagNoFullscreen</item>
        <item name="android:inputType">textCapSentences|textAutoCorrect|textAutoComplete</item>
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="android:maxLength">@integer/length_note_name</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarNote.Scroll">
        <item name="android:layout_gravity">center</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="ToolbarNote.Text" parent="EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:maxLength">@integer/length_note_name</item>
        <item name="android:maxLines">1</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>