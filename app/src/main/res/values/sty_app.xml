<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimarySecond</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="App.ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="android:textColorSecondary">@color/colorText</item>
        <item name="actionMenuTextColor">@color/colorText</item>
    </style>

    <style name="App.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/layout_2dp</item>
        <item name="android:layout_marginRight">@dimen/layout_2dp</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/App.ToolbarTheme</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorTextSecond</item>
    </style>

    <style name="RecyclerView">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/layout_2dp</item>
        <item name="android:paddingTop">@dimen/layout_2dp</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_1dp</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_width">@dimen/layout_1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
