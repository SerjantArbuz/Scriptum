<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="App"/>

    <style name="App.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="clAccent">@color/accentLight</item>
        <item name="clPrimary">@color/primaryLight</item>

        <item name="clDivider">@color/dividerLight</item>
        <item name="clBackground">@color/backgroundLight</item>
        <item name="clBackgroundView">@color/backgroundViewLight</item>
        <item name="clBackgroundEnter">@color/backgroundEnterLight</item>

        <item name="clText">@color/textLight</item>
        <item name="clIcon">@color/iconLight</item>
        <item name="clSecond">@color/secondLight</item>

        <item name="clNoteInfoText">?attr/clText</item>
        <item name="clNoteIndicator">?attr/clIcon</item>

        <item name="colorPrimary">?attr/clPrimary</item>
        <item name="colorPrimaryDark">?attr/clSecond</item>
        <item name="colorAccent">?attr/clAccent</item>


        <item name="styleToolbar">@style/Toolbar.Light</item>
        <item name="themePopup">@style/PopupTheme.Light</item>
        <item name="styleFab">@style/Fab.Light</item>

        <item name="alertDialogStyle">@style/Alert.Light</item>
        <item name="alertDialogTheme">@style/Alert.Light</item>
    </style>

    <style name="App.Light.UI">
        <item name="android:windowBackground">?attr/clBackground</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <item name="android:navigationBarColor" tools:targetApi="lollipop">?attr/colorPrimary</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">?attr/clDivider
        </item>
    </style>

    <style name="App.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="clAccent">@color/accentDark</item>
        <item name="clPrimary">@color/primaryDark</item>

        <item name="clDivider">@color/dividerDark</item>
        <item name="clBackground">@color/backgroundDark</item>
        <item name="clBackgroundView">@color/backgroundViewDark</item>
        <item name="clBackgroundEnter">@color/backgroundEnterDark</item>

        <item name="clIcon">@color/iconDark</item>
        <item name="clText">@color/textDark</item>
        <item name="clSecond">@color/secondDark</item>

        <item name="clNoteInfoText">?attr/clSecond</item>
        <item name="clNoteIndicator">?attr/clAccent</item>

        <item name="colorPrimary">?attr/clPrimary</item>
        <item name="colorPrimaryDark">?attr/clPrimary</item>
        <item name="colorAccent">?attr/clAccent</item>

        <item name="styleToolbar">@style/Toolbar.Dark</item>
        <item name="themePopup">@style/PopupTheme.Dark</item>
        <item name="styleFab">@style/Fab.Dark</item>

        <item name="alertDialogStyle">@style/Alert.Dark</item>
        <item name="alertDialogTheme">@style/Alert.Dark</item>
    </style>

    <style name="App.Dark.UI">
        <item name="android:windowBackground">?attr/clBackground</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <item name="android:navigationBarColor" tools:targetApi="lollipop">?attr/colorPrimary</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">
            ?attr/clDivider
        </item>
    </style>

    <style name="App.Splash" parent="App.Dark.UI">
        <item name="colorPrimaryDark">@color/ic_launcher_background</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>

        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            ?attr/colorPrimaryDark
        </item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">
            ?attr/colorPrimaryDark
        </item>
    </style>

    <style name="App.Intro" parent="App.Splash">
        <item name="android:windowBackground">?attr/colorPrimaryDark</item>
    </style>

    <style name="Alert.Light" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">?attr/clAccent</item>
    </style>

    <style name="Alert.Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">?attr/clAccent</item>
    </style>

    <style name="PopupTheme.Light" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">?attr/clText</item>
        <item name="android:textColorSecondary">?attr/clText</item>
        <item name="colorControlNormal">?attr/clIcon</item>
        <item name="actionMenuTextColor">?attr/clText</item>
    </style>

    <style name="PopupTheme.Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">?attr/clText</item>
        <item name="android:textColorSecondary">?attr/clText</item>
        <item name="colorControlNormal">?attr/clIcon</item>
        <item name="actionMenuTextColor">?attr/clText</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Toolbar.Light">
        <item name="android:theme">@style/PopupTheme.Light</item>
    </style>

    <style name="Toolbar.Dark">
        <item name="android:theme">@style/PopupTheme.Dark</item>
    </style>

    <style name="Fab.Light" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/layout_16dp</item>
        <item name="android:tint">?attr/clBackgroundView</item>
    </style>

    <style name="Fab.Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/layout_16dp</item>
        <item name="android:tint">?attr/clBackgroundView</item>
    </style>

</resources>
