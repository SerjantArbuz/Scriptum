<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RankItem"/>

    <style name="RankItem.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/layout_8dp</item>
    </style>

    <style name="RankItem.Name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/layout_8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/Appearance.Main</item>
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>

    <style name="RankItem.Info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">start</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/Appearance.SubMain</item>
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>

</resources>