<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Info" />

    <style name="Info.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="Info.Icon">
        <item name="android:layout_width">@dimen/icon_128dp</item>
        <item name="android:layout_height">@dimen/icon_128dp</item>
        <item name="android:layout_marginBottom">@dimen/layout_8dp</item>
    </style>

    <style name="Info.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/layout_4dp</item>
        <item name="android:layout_marginBottom">@dimen/layout_8dp</item>
        <item name="android:textAppearance">@style/Appearance.Main</item>
        <item name="android:textSize">@dimen/text_18sp</item>
    </style>

    <style name="Info.Details">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/icon_16dp</item>
        <item name="android:paddingTop">@dimen/layout_4dp</item>
        <item name="android:paddingRight">@dimen/icon_16dp</item>
        <item name="android:paddingBottom">@dimen/layout_4dp</item>
        <item name="android:textAppearance">@style/Appearance.SubMain</item>
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>

</resources>