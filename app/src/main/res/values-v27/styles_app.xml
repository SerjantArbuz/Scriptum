<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App.Light.UI">
        <item name="colorPrimaryDark">?attr/clPrimary</item>

        <item name="android:windowBackground">?attr/clBackgroundWindow</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarDividerColor">?attr/clDivider</item>
    </style>

    <style name="App.Dark.UI">
        <item name="android:windowBackground">?attr/clBackgroundWindow</item>

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarDividerColor">?attr/clDivider</item>
    </style>

</resources>