<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="screen">

    <PreferenceCategory android:title="@string/pref_note_header">

        <Preference
            android:key="@string/pref_key_sort"
            android:summary="@string/pref_sort_summary"
            android:title="@string/pref_sort_title" />

        <Preference
            android:defaultValue="@integer/pref_color_default"
            android:key="@string/pref_key_color"
            android:summary="@string/pref_color_summary"
            android:title="@string/pref_color_title" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_save_header">

        <CheckBoxPreference
            android:defaultValue="@bool/pref_pause_save_default"
            android:key="@string/pref_key_pause_save"
            android:summary="@string/pref_pause_save_summary"
            android:title="@string/pref_pause_save_title" />

        <CheckBoxPreference
            android:defaultValue="@bool/pref_auto_save_default"
            android:key="@string/pref_key_auto_save"
            android:summary="@string/pref_auto_save_summary"
            android:title="@string/pref_auto_save_title" />

        <Preference
            android:defaultValue="@integer/pref_save_time_default"
            android:key="@string/pref_key_save_time"
            android:summary="@string/pref_save_time_summary"
            android:title="@string/pref_save_time_title" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_app_header">

        <Preference
            android:defaultValue="@integer/pref_theme_default"
            android:key="@string/pref_key_theme"
            android:summary="@string/pref_theme_summary"
            android:title="@string/pref_theme_title" />

        <Preference
            android:key="@string/pref_key_rate"
            android:title="@string/pref_rate_title"/>

        <Preference
            android:key="@string/pref_key_about"
            android:title="@string/pref_about_title" />

    </PreferenceCategory>

</PreferenceScreen>