<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:key="screen">

    <PreferenceCategory android:title="@string/header_app">

        <Preference
                android:defaultValue="@integer/value_app_theme"
                android:key="@string/key_app_theme"
                android:summary="@string/summary_app_theme"
                android:title="@string/title_app_theme"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/header_notification">

        <Preference
                android:key="@string/key_notification_signal"
                android:summary="@string/summary_notification_signal"
                android:title="@string/title_notification_signal"/>

        <!-- TODO #RELEASE -->

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/header_note">

        <Preference
                android:defaultValue="@integer/value_note_sort"
                android:key="@string/key_note_sort"
                android:summary="@string/summary_note_sort"
                android:title="@string/title_note_sort"/>

        <Preference
                android:defaultValue="@integer/value_note_color"
                android:key="@string/key_note_color"
                android:summary="@string/summary_note_color"
                android:title="@string/title_note_color"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/header_save">

        <CheckBoxPreference
                android:defaultValue="@bool/value_save_pause"
                android:key="@string/key_save_pause"
                android:summary="@string/summary_save_pause"
                android:title="@string/title_save_pause"/>

        <CheckBoxPreference
                android:defaultValue="@bool/value_save_auto"
                android:key="@string/key_save_auto"
                android:summary="@string/summary_save_auto"
                android:title="@string/title_save_auto"/>

        <Preference
                android:defaultValue="@integer/value_save_time"
                android:key="@string/key_save_time"
                android:summary="@string/summary_save_time"
                android:title="@string/title_save_time"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/header_other">

        <Preference
                android:key="@string/key_other_rate"
                android:title="@string/title_other_rate"/>

        <Preference
                android:key="@string/key_other_about"
                android:title="@string/title_other_about"/>

    </PreferenceCategory>

</PreferenceScreen>